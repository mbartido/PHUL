<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/workoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Workout Name: "
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/recSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workoutName"
        android:text="Recommended Sets: "/>

    <TextView
        android:id="@+id/recReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recSets"
        android:text="Recommended Reps: "/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recReps"
        android:text="Weight"/>

    <TextView
        android:id="@+id/sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weight"
        android:text="Sets"/>

    <TextView
        android:id="@+id/reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sets"
        android:text="Reps"/>

    <EditText
        android:id="@+id/weightEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="number"
        android:text="Name"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/recReps"
        android:layout_toRightOf="@+id/weight"
        android:layout_above="@+id/setsSpin" />

    <Spinner
        android:id="@+id/setsSpin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_above="@+id/reps"
        android:layout_alignLeft="@+id/weightEdit"
        android:layout_alignStart="@+id/weightEdit"
        android:layout_alignRight="@+id/weightEdit"
        android:layout_alignEnd="@+id/weightEdit"/>

    <Spinner
        android:id="@+id/repsSpin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sets"
        android:layout_alignLeft="@+id/setsSpin"
        android:layout_alignStart="@+id/setsSpin"
        android:layout_alignRight="@+id/setsSpin"
        android:layout_alignEnd="@+id/setsSpin"
        android:layout_alignBottom="@+id/reps"/>

    <TextView
        android:id="@+id/_workoutName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recReps"
        android:layout_above="@+id/recSets"/>

    <TextView
        android:id="@+id/_recSets"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/_workoutName"
        android:layout_alignLeft="@+id/_workoutName"
        android:layout_alignStart="@+id/_workoutName"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/_recReps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/_recSets"
        android:layout_alignLeft="@+id/_recSets"
        android:layout_alignStart="@+id/_recSets" />


</RelativeLayout>