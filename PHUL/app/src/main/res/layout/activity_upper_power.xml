<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamberjong.phul.UpperPower">

    <TextView
        android:id="@+id/upperPowerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upperPower"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/workoutList_view"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperPowerTitle" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="143dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/calcText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutList_view"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
